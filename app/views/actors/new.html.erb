<h1>Add a New Actor</h1>

<!-- <form action="http://localhost:3000/actors" method="post"> -->
<%= form_tag "http://localhost:3000/actors", :method => "post" do %>
  <div>
    <label for="name">Name</label>
    <input name="name" type="text" id="name" placeholder="Name">
  </div>

  <div>
    <label for="bio">Biography</label>
    <input name="bio" type="text" id="bio" placeholder="Biography">
  </div>

  <div>
    <label for="dob">Date of Birth</label>
    <input name="dob" type="text" id="dob" placeholder="Date of Birth">
  </div>

  <div>
    <label for="image_url">Image URL</label>
    <input name="image_url" type="text" id="image_url" placeholder="Image URL">
  </div>

  <div>
    <input type="submit" value="Create Actor">
    or <a href="index.html">Cancel</a>
  </div>
<% end %>
<!-- </form> -->
